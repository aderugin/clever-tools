#!/bin/bash

export VENV=$VIRTUAL_ENV
mkdir -p $VENV/packages
cd $VENV/packages


if [ ! -f redis-stable.tar.gz ]
then
    wget http://download.redis.io/redis-stable.tar.gz
    tar xzvf redis-stable.tar.gz
fi

cd $VENV/packages/redis-stable
./configure --prefix=$VENV && make -j4 && make install

export LD_LIBRARY_PATH=$VENV/lib:$LD_LIBRARY_PATH

cd $VENV/packages/xapian-bindings-1.2.8
./configure --prefix=$VENV --with-python && make -j4 && make install

python -c "
CHECK = '\033[32m✔\033[39m'
ERROR = '\033[31m✘\033[39m'

try:
    import redis
except ImportError:
    print 'Install completed with error ' + ERROR
else:
    print 'Install completed succefull ' + CHECK
"


